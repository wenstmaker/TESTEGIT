<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:用于指定当前的映射文件和哪个接口进行映射，需要指定接口的文件路径，需要标注包的完整路径接口-->
<mapper namespace="com.example.internetstore.mapper.CartMapper">
<!--自定义映射规则：resultMap-->
<!--    id属性：标签给这个映射负责分配一个唯一的id值，对应的就是rsultMap="id属性的值"属性的取值-->
<!--    type:取值是一个类，表示的是数据库中的拆线呢结果与Java中哪个实体类进行结果集的映射-->
    <resultMap id="CartEntityMap" type="com.example.internetstore.Entity.Cart">
        <id column="cid" property="cid"/>
        <result column="created_user" property="createdUser"/>
        <result column="created_time" property="createdTime"/>
        <result column="modified_user" property="modifiedUser"/>
        <result column="modified_time" property="modifiedTime"/>
    </resultMap>

    <insert id="Insert" useGeneratedKeys="true" keyProperty="cid">
        INSERT INTO t_cart (uid, pid, price, num, created_user, created_time, modified_user, modified_time)
        VALUES (#{uid}, #{pid}, #{price}, #{num}, #{createdUser}, #{createdTime}, #{modifiedUser}, #{modifiedTime})
    </insert>


    <update id="UpdateCart" >
        update t_cart num=#{num},modifiedUser=#{modifiedUser},modifiedTime=#{modifiedTime} where cid = #{cid}
    </update>

    <select id="ffindByPidandUid" resultMap="CartEntityMap">
        select * from t_cart where pid=#{pid} and uid =#{uid}
    </select>
</mapper>
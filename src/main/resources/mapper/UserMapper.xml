<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:用于指定当前的映射文件和哪个接口进行映射，需要指定接口的文件路径，需要标注包的完整路径接口-->
<mapper namespace="com.example.internetstore.mapper.UserMapper">
<!--自定义映射规则：resultMap-->
<!--    id属性：标签给这个映射负责分配一个唯一的id值，对应的就是rsultMap="id属性的值"属性的取值-->
<!--    type:取值是一个类，表示的是数据库中的拆线呢结果与Java中哪个实体类进行结果集的映射-->
    <resultMap id="UserEntityMap" type="com.example.internetstore.Entity.User">
<!--        将表的资源和类的属性不一致的字段进行匹配指定，名称一致的字段可以省略不写-->
<!--column:表示表中的资源名称    property: 表示类中的属性名称-->
<!--在定义映射规则时，主键是不可以省略-->
        <id column="uid" property="uid"/>
        <result column="is_delete" property="isDelete"/>
        <result column="created_user" property="createdUser"/>
        <result column="created_time" property="createdTime"/>
        <result column="modified_user" property="modifiedUser"/>
        <result column="modified_time" property="modifiedTime"/>
    </resultMap>
    <!--resultType:表示查询的结果集类型，只需要指定对应映射的类型，并且包含完整包接口-->
    <select id="findByUsername" resultMap="UserEntityMap">
        select * from t_user where username = #{username}
    </select>
<!--    id:表示映射接口中方法的名称
        useGenrateKeys:表示开启某个字段的值递增（主键设置为递增）
        keyProperty:标签将表中的哪个字段作为主键进行递增
-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO t_user(uid ,username ,password ,salt ,
            phone,email ,gender,avatar,
            is_delete,created_user,created_time,modified_user,modified_time)
        VALUES (#{uid} ,#{username} ,#{password},#{salt},
            #{phone},#{email} ,#{gender},#{avatar},
            #{isDelete},#{createdUser},#{createdTime},#{modifiedUser},#{modifiedTime})
    </insert>

    <update id="UpdatePassword">
        update t_user set password = #{pd} where username = #{username}
    </update>

    <update id="UpdatePersonMessage" >
        update t_user set phone=#{phone},email=#{email},gender=#{gender} where username = #{username}
    </update>

    <update id="UpdateAvatar" >
        update t_user set avatar=#{avatar} where username = #{username}
    </update>
</mapper>